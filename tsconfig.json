{
	"compilerOptions": {
		/* Base Options */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		/* Strictness */
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		/** Transpiling */
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"outDir": "dist",
		"sourceMap": true,
		"lib": [
			"es2022",
			"dom",
			"dom.iterable"
		],
		"jsx": "react-jsx",
		"types": [
			"@testing-library/jest-dom"
		]
	},
	"include": [
		"./src",
		"./tests"
	],
	"exclude": [
		"./node_modules",
		"./dist"
	]
}